            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:text="tuesday"
            android:textColor="@color/gold"
            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:text="wednesday"
            android:textColor="@color/chartreuse"
            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:text="thursday"
            android:textColor="@color/aqua"
            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:text="friday"
            android:textColor="@color/blue"
            android:textSize="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:text="saturday"
            android:textColor="@color/blueviolet"
            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.necer.calendar.WeekCalendar
        app:todayCheckedBackground="@color/sienna"
        app:todayCheckedSolarTextColor="@color/sienna"
        app:defaultCheckedLunarTextColor="@color/white"
        app:todayCheckedLunarTextColor="@color/white"
        app:todayUnCheckedLunarTextColor="@color/white"
        app:defaultUnCheckedLunarTextColor="@color/white"
        android:id="@+id/btnPickStartDate"
        android:layout_width="match_parent"
        android:layout_height="50dp" />




    <Button
        android:visibility="gone"
        android:id="@+id/btnPickEndDate2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECT_END_DATE"
        />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="END_DATE"
            android:layout_width="150dp"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/tvEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="@color/white"
            android:background="@color/lightblue"
            android:id="@+id/end_toLastPager"
            android:text="back"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/tx_end_pager"
            android:text="week1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:textColor="@color/white"
            android:background="@color/lightblue"
            android:id="@+id/end_toNextPager"
            android:text="next"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/toLastPager2"
            android:text="上一周"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView

            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/tx_pager2"
            android:text="第1周"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/toNextPager2"
            android:text="下一周"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"

            android:text="sunday"
            android:textColor="@color/orangered"
            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:text="monday"
            android:textColor="@color/coral"
            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:text="tuesday"
            android:textColor="@color/gold"
            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:text="wednesday"
            android:textColor="@color/chartreuse"
            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:text="thursday"
            android:textColor="@color/aqua"
            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:text="friday"
            android:textColor="@color/blue"
            android:textSize="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:text="saturday"
            android:textColor="@color/blueviolet"
            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.necer.calendar.WeekCalendar
        app:todayCheckedBackground="@color/sienna"
        app:todayCheckedSolarTextColor="@color/sienna"
        app:defaultCheckedLunarTextColor="@color/white"
        app:todayCheckedLunarTextColor="@color/white"
        app:todayUnCheckedLunarTextColor="@color/white"
        app:defaultUnCheckedLunarTextColor="@color/white"
        android:id="@+id/btnPickEndDate"
        android:layout_width="match_parent"
        android:layout_height="50dp" />




    <Button
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:layout_marginTop="20dp"
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />
</LinearLayout>
